@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <title>BackOffice - Registro</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/estilos.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col absolute-center is-responsive-register">
                <div class="row justify-content-center mb-4">
                    <img class="tamanio-logo-register" src="@Url.Content("~/Content/img/logoHeader.png")" />
                </div>
                <div class="row" style="border:1px solid #ddd; border-radius:20px;">
                    <div class="col-12 ">
                        <div class="row text-center d-flex justify-content-center m-2">
                            <h3>Crear Cuenta</h3>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <form id="Formulario" action="Generals/VerifyRegister" method="post">
                                    <div class="form-group">
                                        <label for="usuario" class="m-0" style="font-weight:500; font-size:14px">Nro. Documento <span style="color:red;">*</span></label>
                                        <input type="text" name="usuario" id="usuario" class="form-control" placeholder="Ingrese su nro. Documento"  data-validation="required"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="usuario" class="m-0" style="font-weight:500; font-size:14px">Correo <span style="color:red;">*</span></label>
                                        <input type="email" name="email" id="email" class="form-control" placeholder="Ingrese su correo"  data-validation="email"/>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12 col-md-6">
                                            <label for="usuario" class="m-0" style="font-weight:500; font-size:14px">Cargo <span style="color:red;">*</span></label>
                                            <input type="text" name="cargo" id="cargo" class="form-control" placeholder="Ingrese su cargo"  data-validation="required"/>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <label for="usuario" class="m-0" style="font-weight:500; font-size:14px">Teléfono</label>
                                            <input type="tel" name="telefono" id="telefono" class="form-control" placeholder="Ingrese su teléfono" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="usuario" class="m-0" style="font-weight:500; font-size:14px">Contraseña <span style="color:red;">*</span></label>
                                        <input type="password" name="pass" id="pass" class="form-control" placeholder="Ingrese su contraseña"  data-validation="required"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="usuario" class="m-0" style="font-weight:500; font-size:14px">Repetir Contraseña <span style="color:red;">*</span></label>
                                        <input type="password" name="repass" id="repass" class="form-control" placeholder="Repita su contraseña" data-validation="confirmation" data-validation-confirm="pass"/>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label" style="font-weight:500;cursor:pointer;">
                                            <input type="checkbox" name="terminos" id="terminos" class="form-check-input" style="cursor:pointer;"  data-validation="required"/>Aceptar Términos y Condiciones <span style="color:red;">*</span>
                                        </label>
                                    </div>
                                    <div style="color:red;" id="MESSAGE">
                                        @{
                                            if (ViewBag.Message != null)
                                            {
                                                @ViewBag.Message
                                            }
                                        }
                                    </div>

                                    <div class="form-group mt-2 d-flex justify-content-center">
                                        <input type="submit" id="enviar" name="enviar" value="Registrar" class="btn btn-block btn-warning" onclick="Validate(event)" />
                                    </div>
                                    <div class="form-group text-center">
                                        <span>¿Ya tienes una cuenta? <a href="/ingresar">¡Ingresa!</a></span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/JqueryFormValidate.js"></script>
<script src="~/Scripts/FormValidateSecurity.js"></script>
<link href="~/Content/themes/base/FormValidatorTheme.css" rel="stylesheet" type="text/css" />
<script>
    $.validate({
        modules: 'security'
    });
</script>