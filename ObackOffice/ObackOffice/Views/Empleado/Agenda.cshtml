@section Scripts{

    <script>

        function Filtrar() {
            LoadAgenda();
        }

        function LoadAgenda() {
            var events = [];
            $.ajax({
                type: "GET",
                url: "/Empleado/GetCursosProgramados?cursoId=" + $('#curso').val(),
                success: function (data) {
                    $.each(data, function (i, v) {
                        events.push({
                            title: v.Curso,
                            description: 'nada',
                            start: moment(v.FechaInicio),
                            end: v.FechaFin != null ? moment(v.FechaFin) : null,
                            color: v.Color,
                            allDay: true
                        })
                    });
                    GenerateCalender(events);
                },
                error: function (error) {
                    alert('Failed');
                }

            }); 
        }

        function GenerateCalender(events) {
            $('#calendar').fullCalendar('destroy');
            $('#calendar').fullCalendar({
                lang: 'es',
                contentHeight: 600,
                defaultDate: new Date(),
                timeFormat: 'h(:mm)a',
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,basicWeek,basicDay,agenda'
                },
                eventLimit: true,
                eventColor: '#378006',
                events: events,
                eventClick: function (calEvent, jsEvent, view) {
                    $('#ModalInscripcion #eventTitle').text("Inscribir al Curso de: " + calEvent.title);
                    var $description = $('<div/>');
                    $description.append($('<p/>').html('<b>Start:</b>' + calEvent.start.format("DD-MMM-YYYY HH:mm a")));
                    if (calEvent.end != null) {
                        $description.append($('<p/>').html('<b>End:</b>' + calEvent.end.format("DD-MMM-YYYY HH:mm a")));
                    }
                    $description.append($('<p/>').html('<b>Description:</b>' + calEvent.description));
                    $('#ModalInscripcion #pDetails').empty().html($description);

                    $('#ModalInscripcion').modal();
                }
            });
        }       

        function loadEvento() {
            $.ajax(
                {
                    url: '/Empleado/GetEvento?sedeId=' + $('#sede').val(),
                    type: 'GET',
                    success: function (json) {
                        var listItems = '';
                        var $select = $('#evento');
                        $select.find('option').remove();
                        for (var i = 0; i < json.length; i++) {
                            listItems += "<option value='" + json[i].Id + "'>" + json[i].Value + "</option>";
                        }
                        $select.html(listItems);
                        loadCurso();
                    },
                    error: function () {
                        alert('Error');
                    }
                })
        }

        function loadCurso() {
            $.ajax(
                {
                    url: '/Empleado/GetCurso?eventoId=' + $('#evento').val(),
                    type: 'GET',
                    success: function (json) {
                        var listItems = '';
                        var $select = $('#curso');
                        $select.find('option').remove();
                        for (var i = 0; i < json.length; i++) {
                            listItems += "<option value='" + json[i].Id + "'>" + json[i].Value + "</option>";
                        }
                        $select.html(listItems);
                    },
                    error: function () {
                        alert('Error');
                    }
                })
        }

        $(document).ready(function () {
            

            LoadAgenda();

            $('#sede').on('change', loadEvento);
            $('#evento').on('change', loadCurso);

             

          
        });
    </script>
}
