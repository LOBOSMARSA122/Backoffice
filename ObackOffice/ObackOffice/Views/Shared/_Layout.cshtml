<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ObackOffice</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <header class="fixed-top">
                <div class="row ">
                    <div class="col logo d-none d-md-block">
                        <a href="http://alphabusinessc.com/">
                            <img src="~/Content/img/logoHeader.png" />
                        </a>
                    </div>
                    <nav class="col menu d-flex align-items-center col-auto">
                        <a href="#" class="imagen"><img src="../Content/img/persona3.jpg" width="40" height="40" alt="" /></a>
                        <a href="#">Anabel Torress Medina</a>
                    </nav>
                </div>
            </header>
        </div>

        <div class="row main">
            <div class="barra-lateral col-12 col-sm-auto">
                <div class="datos-usuario">
                    <img src="~/Content/img/perfil.jpg" />
                </div>
                <nav class="menu d-flex d-sm-block justify-content-center flex-wrap">
                    <a href="#"><i class="icon-pencil"></i><span>Registros</span></a>
                    <a href="#"><i class="icon-book"></i><span>Cursos</span></a>
                    <a href="#"><i class="icon-chart-bar"></i><span>Reportes</span></a>
                </nav>            
            </div>
            <main class="col">
                @RenderBody()
            </main>
        </div>
      
           
    </div>
  



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
