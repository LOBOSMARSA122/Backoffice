<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ObackOffice</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <header class="fixed-top">
            <div class="row  align-items-center">
                <div class="col-auto columna ml-3">
                    <a href="#" class="bt-menu"><span class="icon-menu icono-menu"></span></a>
                </div>

                <div class="col logo d-none d-md-block">
                    <a href="http://alphabusinessc.com/">
                        <img src="~/Content/img/logoHeader.png" />
                    </a>
                </div>

                <nav class="col menu d-flex col-auto align-items-center ">
                    <a href="#" class="imagen"><img src="../Content/img/persona3.jpg" width="35" height="35" alt="" /></a>
                    <a href="#">Anabel Torress Medina</a>
                </nav>

            </div>
        </header>
      
        <div class="row main">
            <div class="barra-lateral col-auto contenido-wrapper">
                <div class="datos-usuario">
                    <img src="~/Content/img/perfil.jpg" />
                </div>
                @Html.Partial("_sideBarPartial")
            </div>
                <main class="col contenido abrir-contenido contenido-wrapper">
                    @RenderBody()
                </main> 
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)

</body>
</html>
