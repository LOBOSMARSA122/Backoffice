<div class="container-fluid">
    <div class="box box-default mt-2" id="acordion">
        <div class="box-header with-border" id="heading1">
            <h3 class="box-title" style="cursor:pointer;" onclick="ColapsarFiltro('collapse1')"><i class="icon-calendar"></i> Banjeda de Usuarios</h3>
        </div>
        <div id="collapse1" class="box-body collapse show" aria-labelledby="heading1" style="overflow:hidden;">
                <div class="row">
                    <div class="col-12 col-sm-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            <label for="">Nombre Usuario</label>
                            <input type="text" id="NombreUsuario" name="NombreUsuario" class="form-control" maxlength="150" placeholder="Ingrese Nombre de Usuario" />
                        </div>
                    </div>
                    <div class="col-12 col-sm-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            <label for="">Nombre Persona</label>
                            <input type="text" id="NombrePersona" name="NombrePersona" class="form-control" maxlength="150" placeholder="Ingrese Nombre de Persona" />
                        </div>
                    </div>
                    <div class="col-6 col-sm-4 col-lg-2 col-xl-1">
                        <div class="form-group">
                            <label for=""></label>
                            <button class="btn-info boton form-control" onclick="FiltrarUsuarios()">
                                <i class="fa fa-search"></i> Filtrar
                            </button>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <div id="RenderBandejaUsuarios">
        @Html.Partial("_BandejaUsuariosPartial")
    </div>

    <nav class="d-flex justify-content-end align-items-center flex-wrap">

        <div>
            <button class="btn-success boton form-control" onclick="ExportExcel()">
                <i class="fa fa-search"></i> Exportar a Excel
            </button>
            <button class="btn-success boton form-control" onclick="location.href='@Url.Action("CrearUsuario","Acceso")'">
                <i class="fa fa-search"></i> Nuevo Usuario
            </button>
        </div>
    </nav>
</div>

<script>
    function ColapsarFiltro(id) {
        if ($("#" + id).height() == 0) {
            $("#" + id).animate({ "height": "100px", "padding":"10px" }, 400);
        } else {
            $("#" + id).animate({ "height": "0px", "padding":"0px 10px" }, 400);
        }
    }

    function DeleteUser(id) {
        $.ajax({
            cache: false,
            dataType: 'json',
            method: 'POST',
            data: { id: id },
            url: '/Acceso/DeleteUser',
            success: function (json) {
                if (json) {
                    FiltrarUsuarios();
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function FiltrarUsuarios() {
        data = {
            NombreUsuario: $("#NombreUsuario").val(),
            NombrePersona: $("#NombrePersona").val(),
            Index: 1,
            Take: 10
        };

        $.ajax({
            cache: false,
            dataType: 'html',
            method: 'POST',
            data: data,
            url: '/Acceso/FiltrarUsuario',
            success: function (html) {
                $("#RenderBandejaUsuarios").html(html);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function ExportExcel() {
        for (i = 0; i < $("#TablaAExportar .NoImprimir").length; i++) {
            $($("#TablaAExportar .NoImprimir")[i]).css("display", "none");
        }

        var tab_text = "<table border='2px'><tr style='text-align:center'><td colspan='999'>Listado Usuarios</td></tr><tr bgcolor='#87AFC6'>";
        var textRange; var j = 0;
        tab = document.getElementById('TablaAExportar'); // id of table

        for (j = 0; j < tab.rows.length; j++) {
            tab_text = tab_text + tab.rows[j].innerHTML + "</tr>";
            //tab_text=tab_text+"</tr>";
        }

        tab_text = tab_text + "</table>";
        tab_text = tab_text.replace(/<A[^>]*>|<\/A>/g, "");//remove if u want links in your table
        tab_text = tab_text.replace(/<img[^>]*>/gi, ""); // remove if u want images in your table
        tab_text = tab_text.replace(/<input[^>]*>|<\/input>/gi, ""); // reomves input params

        var ua = window.navigator.userAgent;
        var msie = ua.indexOf("MSIE "); 
        var sa;

        if (msie > 0 || !!navigator.userAgent.match(/Trident.*rv\:11\./))      // If Internet Explorer
        {
            txtArea1.document.open("txt/html", "replace");
            txtArea1.document.write(tab_text);
            txtArea1.document.close();
            txtArea1.focus();
            sa = txtArea1.document.execCommand("SaveAs", true, "Say Thanks to Sumit.xls");
        }
        else {
            //other browser not tested on IE 11
            //sa = window.open('data:application/vnd.ms-excel,' + encodeURIComponent(tab_text), "Prueba1", );
            var downloadLink = document.createElement("a");
            downloadLink.href = 'data:application/vnd.ms-excel,' + encodeURIComponent(tab_text);
            var d = new Date();
            downloadLink.download = "Listado Usuarios " + d.getDate() + "-" + d.getMonth() + "-" + d.getFullYear() + ".xls";
            downloadLink.click();
        }

        for (i = 0; i < $("#TablaAExportar .NoImprimir").length; i++) {
            $($("#TablaAExportar .NoImprimir")[i]).css("display", "table-cell");
        }

        return (sa);
    }
</script>